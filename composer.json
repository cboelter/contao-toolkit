{
  "name": "netzmacht/contao-toolkit",
  "description": "This library provides tools to simplify common tasks when developing with Contao.",
  "license": "LGPL-3.0-or-later",
  "type": "contao-bundle",
  "keywords": [
    "contao",
    "tools"
  ],
  "authors": [
    {
      "name": "David Molineus",
      "email": "mail@netzmacht.de",
      "homepage": "https://netzmacht.de",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "mail@netzmacht.de",
    "issues": "https://github.com/netzmacht/contao-toolkit/issues",
    "source": "https://github.com/netzmacht/contao-toolkit"
  },
  "require": {
    "php": "^7.4 || ^8.0",
    "beberlei/assert": "^2.7 || ^3.0",
    "contao/core-bundle": "^4.13 || ^5.0",
    "doctrine/dbal": "^3.1",
    "psr/log": "^1.1",
    "symfony/asset": "^5.4 || ^6.0",
    "symfony/config": "^5.4 || ^6.0",
    "symfony/dependency-injection": "^5.4 || ^6.0",
    "symfony/event-dispatcher": "^5.4 || ^6.0",
    "symfony/event-dispatcher-contracts": "^1.1.6 || ^2.0",
    "symfony/http-foundation": "^5.4 || ^6.0",
    "symfony/http-kernel": "^5.4 || ^6.0",
    "symfony/routing": "^5.4 || ^6.0",
    "symfony/security-core": "^5.4 || ^6.0",
    "symfony/security-csrf": "^5.4 || ^6.0",
    "symfony/string": "^5.4 || ^6.0",
    "symfony/translation-contracts": "^1.1.6 || ^2.0"
  },
  "require-dev": {
    "contao/manager-plugin": "^2.0",
    "doctrine/coding-standard": "^9.0.",
    "friends-of-phpspec/phpspec-expect": "^4.0",
    "friendsofsymfony/http-cache": "^2.0",
    "phpcq/runner-bootstrap": "^1.0@dev",
    "phpspec/phpspec": "^7.0"
  },
  "conflict": {
    "contao/manager-plugin": "<2.0 || >=3.0",
    "friendsofsymfony/http-cache": "<2.0 || >=3.0"
  },
  "autoload": {
    "psr-4": {
      "Netzmacht\\Contao\\Toolkit\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\Netzmacht\\Contao\\Toolkit\\": "spec/"
    }
  },
  "config": {
    "allow-plugins": {
      "contao-components/installer": true,
      "composer/package-versions-deprecated": true,
      "contao/manager-plugin": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "extra": {
    "branch-alias": {
      "dev-develop": "4.0.x-dev",
      "dev-master": "3.8.x-dev"
    },
    "contao-manager-plugin": "Netzmacht\\Contao\\Toolkit\\Bundle\\ContaoManager\\Plugin"
  }
}
